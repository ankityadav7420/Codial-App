
<h1>
    Codeial / <%= title %>
</h1>


<section id="feed-posts">
    <h4>Posts</h4>
    <% if(locals.user){%>
    <form action="/posts/create" id="new-post-form" method="POST">
        <textarea name="content" cols="30" rows="3" placeholder="about your post..."></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>

    <div id="posts-list-container">
        <ul>
            <% for(post of posts){ %>
            <li>
                <p>
                    <%= post.content %>
                    <br>
                    <small>
                         <%= post.user.name %>  
                         <!-- <--showing the user who have posted the data --> 
                    </small>
                </p>
            </li>
            <%} %>
        </ul>
    </div>


</section>



